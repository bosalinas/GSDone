<div class="jumbotron big-banner" style="height: 100%">
    <section class="h-100 gradient-custom-2">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-9 col-xl-7">
                    <div class="card">
                        <div class="rounded-top text-white d-flex flex-row"
                            style="background-color: #000000; height:200px;">
                            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                <img src="./css/logo-white.png"
                                    alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                    style="width: 150px; z-index: 1">
                            </div>
                            <div class="mx-2 p-3" style="margin-top: 100px;">
                                <h5>{{user.firstName}}
                                <br>{{user.lastName}}</h5>
                            </div>
                        </div>
                        <div class="p-4 text-black" style="background-color: #f8f9fa;">
                        </div>
                        <div class="card-body p-4 text-black">
                            <div class="mb-5">
                                <p class="lead fw-normal mb-1">About</p>
                                <div class="p-4" style="background-color: #f8f9fa;">
                                    <p id="userBio" class="text-break"></p>
                                    {{user.bio}}
                                </div>
                            </div>
                            <div class="container-fluid">
                                <h3>Create a New Task</h3>

                                <form class="form new-task-form">
                                    <div class="form-group">
                                        <label for="task-name">Task Description:</label>
                                        <input class="form-input" type="text" id="task-name" name="task-name" />
                                    </div>
                                    <div class="form-group">
                                        <button type="input" id="save-list"
                                            class="btn btn-secondary btn-sm">Create</button>
                                    </div>
                                </form>
                            </div>
                            <table class="table table-striped table-sm table-bordered" id="task-table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="tasks fw-normal" scope="col"></th>
                                        <th scope="col">Task List</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
</section>
</div>
<script src="./js/userprofile.js" defer></script>
